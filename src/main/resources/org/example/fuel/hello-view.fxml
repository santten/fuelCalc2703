<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.fuel.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="lblFuel" text="Fuel" />
   <TextField fx:id="txtFuel" />
   <Label fx:id="lblDistance" text="Distance" />
   <TextField fx:id="txtDistance" />
   <Label fx:id="txtResult" />
   <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#onCalculate" text="Calculate" />
    <HBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="200.0">
        <Button mnemonicParsing="false" onAction="#onFRClick" text="FR"/>
        <Button mnemonicParsing="false" onAction="#onENClick" text="EN"/>
        <Button mnemonicParsing="false" onAction="#onJAClick" text="JA"/>
        <Button mnemonicParsing="false" onAction="#onIRClick" text="IR"/>
    </HBox>
</VBox>
